<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0F7FA"
        android:padding="0dp">

        <!-- Top Section with Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="#D4F8E2">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:src="@drawable/productlogo" />


        </LinearLayout>

        <!-- Middle Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/emergency_hotlines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="CONTACT EMERGENCY HOTLINES:"
                android:textSize="18sp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/select_city_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/selectcity"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/select_city_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select City"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E88E5"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/non_emergency_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="NON - EMERGENCY FEATURES"
                android:textSize="18sp"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/category_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"

                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/fire_button"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/articlebutton"
                        android:contentDescription="Articles Icon"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="12dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn how to\nprevent incidents"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:singleLine="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/medical_button"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:background="@drawable/cityhospitalslogolast"
                        android:contentDescription="Hospitals Icon"
                        android:scaleType="fitCenter" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospitals in cities"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:layout_marginTop="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bottom_rounded"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="HOME"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
