<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".TaguigHospitalListActivity">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0F7FA"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/change_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="← Change to other City"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0F7FA"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospitals Around TAGUIG"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Hospital List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0F7FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E0F7FA">

            <!-- Hospital 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="St. Luke’s Medical Center – Global City"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Street and 11th Avenue, Bonifacio Global City, Taguig, Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/go_to_maps_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Repeat similar blocks for other hospitals with unique IDs for "Go to Google Maps" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recuenco General Hospital"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68 Sampaloc Ext, Taguig, 1630 Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/go_to_maps_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taguig Doctors Hospital"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39 Dir. A. Bunye, Taguig, Kalakhang Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/go_to_maps_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taguig Pateros District Hospital"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E Service Rd, Taguig, 1630 Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/go_to_maps_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
