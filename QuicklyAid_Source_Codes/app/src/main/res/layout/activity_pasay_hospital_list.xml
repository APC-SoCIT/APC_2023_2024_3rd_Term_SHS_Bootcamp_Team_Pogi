<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".PasayHospitalListActivity">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0F7FA"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/change_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="â† Change to other City"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D4F8E2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospitals Around PASAY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Hospital List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0F7FA"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="#E0F7FA">

            <!-- Pasay City General Hospital -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasay City General Hospital"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P Burgos St, Pasay, Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/pasay_city_general_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Air Force General Hospital -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air Force General Hospital"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Villamor Air Base, Pasay City, Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/airforce_general_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- San Juan De Dios Hospital -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="San Juan De Dios Hospital"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roxas Boulevard, Pasay City, Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/san_juan_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Adventist Medical Center Manila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="15dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adventist Medical Center Manila"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="San Juan St, Pasay City, Metro Manila"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/adventist_medical_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to Google Maps"
                    android:textSize="16sp"
                    android:textColor="#0000FF"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

