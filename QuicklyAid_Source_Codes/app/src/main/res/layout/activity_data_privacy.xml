<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvPrivacyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By using this application, you agree to the collection, use, and sharing of your personal data in accordance with our Data Privacy Act. Please review the policy and choose an option to proceed."
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agree"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnNotAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Agree"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
